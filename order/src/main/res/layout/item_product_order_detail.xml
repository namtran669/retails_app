<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listPromoLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/deliveryAddressLayout">

    <TextView
        android:id="@+id/promoNoTextView"
        style="@style/L4.DodgerBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/promoNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/promoNameTextView"
        tools:text="1x" />

    <TextView
        android:id="@+id/promoNameTextView"
        style="@style/R18.Trout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/priceTextView"
        app:layout_constraintStart_toEndOf="@id/promoNoTextView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pad Thai With Shrimps Pad Thai With ShrimpsPad" />

    <TextView
        android:id="@+id/priceTextView"
        style="@style/R18.Trout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@id/promoNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/promoNameTextView"
        tools:text="230à¸¿" />

</androidx.constraintlayout.widget.ConstraintLayout>
