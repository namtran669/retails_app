<?xml version="1.0" encoding="utf-8"?><androidx.core.widget.NestedScrollView    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/productDetailScrollView"    android:layout_width="match_parent"    android:layout_height="match_parent">        <androidx.constraintlayout.widget.ConstraintLayout            android:id="@+id/constraintLayout"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="@drawable/shape_white_top_left_right_30_radius"            android:layout_marginBottom="190dp"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent">            <ImageView                android:id="@+id/closeProductImageView"                android:layout_width="28dp"                android:layout_height="28dp"                android:layout_marginStart="20dp"                android:layout_marginTop="20dp"                android:background="?selectableItemBackgroundBorderless"                android:padding="4dp"                android:src="@drawable/ic_close_white"                android:tint="@color/trout"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent"                tools:ignore="ContentDescription" />            <ImageView                android:id="@+id/productImageView"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:scaleType="centerInside"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toBottomOf="@id/closeProductImageView" />            <TextView                android:id="@+id/storeOfProductTextView"                style="@style/R15.DodgerBlue"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginStart="20dp"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toBottomOf="@id/productImageView"                android:text="Makro Store" />            <LinearLayout                android:id="@+id/productNameLayout"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginStart="20dp"                android:layout_marginEnd="20dp"                android:gravity="center"                android:orientation="horizontal"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toBottomOf="@id/storeOfProductTextView">                <TextView                    android:id="@+id/productNameTextView"                    style="@style/H2.Trout"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Fresh Banana" />                <TextView                    android:id="@+id/productPriceTextView"                    style="@style/H1.5.Trout"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:gravity="end"                    android:text="27.00฿" />            </LinearLayout>            <LinearLayout                android:id="@+id/productPriceLayout"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginStart="20dp"                android:layout_marginEnd="20dp"                android:gravity="center"                android:orientation="horizontal"                android:paddingBottom="21dp"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toBottomOf="@id/productNameLayout">                <TextView                    android:id="@+id/productSizeTextView"                    style="@style/P2.Trout"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Fresh Banana" />                <TextView                    android:id="@+id/discountPriceTextView"                    style="@style/M15.Trout60"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:layout_marginEnd="9dp"                    android:layout_weight="1"                    android:gravity="end"                    android:text="27.00฿" />                <TextView                    android:id="@+id/discountPercentTextView"                    style="@style/P3.White.Bold"                    android:layout_width="50dp"                    android:layout_height="24dp"                    android:layout_gravity="center_vertical"                    android:background="@drawable/bg_text_discount_percent"                    android:gravity="center"                    android:elevation="@dimen/defaultViewElevation"                    android:text="@string/discount_percent_example" />            </LinearLayout>            <TextView                android:id="@+id/priceNoteTextView"                style="@style/P3.Trout40"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="@color/athensGray"                android:gravity="center"                android:padding="9dp"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toBottomOf="@id/productPriceLayout"                android:text="The price is for Today - 29 Oct 2019" />            <TextView                android:id="@+id/productLifeTextView"                style="@style/L1.Trout"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="30dp"                android:background="@drawable/bg_text_border_botticelli_10_radius"                android:paddingStart="13dp"                android:paddingEnd="13dp"                android:paddingTop="8dp"                android:paddingBottom="8dp"                app:layout_constraintTop_toBottomOf="@id/priceNoteTextView"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintEnd_toEndOf="parent"                android:text="LIFE 7 DAYS"/>            <TextView                android:id="@+id/productLifeDetailTextView"                style="@style/R15.Trout70"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="12dp"                android:paddingStart="20dp"                android:paddingEnd="20dp"                android:gravity="center"                app:layout_constraintTop_toBottomOf="@id/productLifeTextView"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintEnd_toEndOf="parent"                android:text="This means we guarantee that the product\n delivered to you will have 7 days or more of shelf\n life before expiration date."/>            <LinearLayout                android:id="@+id/productProducerDetailLayout"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="27dp"                android:paddingBottom="30dp"                android:gravity="center"                android:orientation="horizontal"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toBottomOf="@id/productLifeDetailTextView">                <ImageView                    android:id="@+id/productFlatImageView"                    android:layout_width="20dp"                    android:layout_height="20dp"                    android:background="@drawable/bg_circle_no_background_image"                    android:scaleType="centerInside"                    tools:ignore="ContentDescription" />                <TextView                    android:id="@+id/productProducerTextView"                    style="@style/L1.Trout"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginStart="6dp"                    android:text="Produce of India" />            </LinearLayout>            <androidx.constraintlayout.widget.ConstraintLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="@color/athensGray"                android:orientation="vertical"                android:paddingTop="25dp"                android:paddingBottom="15dp"                android:descendantFocusability="blocksDescendants"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toBottomOf="@id/productProducerDetailLayout">                <TextView                    android:id="@+id/groceryNameTextView"                    style="@style/H2.Trout"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:paddingStart="20dp"                    android:paddingEnd="0dp"                    android:text="@string/related_products"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toTopOf="parent" />                <TextView                    android:id="@+id/seeAllTextView"                    style="@style/MaterialButtonTextButton.H1.Trout40Transparent"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginEnd="15dp"                    android:text="@string/see_all"                    android:textAllCaps="true"                    android:textAlignment="center"                    app:layout_constraintBottom_toBottomOf="@+id/groceryNameTextView"                    app:layout_constraintEnd_toEndOf="parent"                    app:layout_constraintTop_toTopOf="@+id/groceryNameTextView" />                <androidx.recyclerview.widget.RecyclerView                    android:id="@+id/relatedProductRecyclerView"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="15dp"                    android:orientation="horizontal"                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"                    app:layout_constraintStart_toStartOf="parent"                    app:layout_constraintTop_toBottomOf="@+id/groceryNameTextView"                    tools:listitem="@layout/item_product" />            </androidx.constraintlayout.widget.ConstraintLayout>        </androidx.constraintlayout.widget.ConstraintLayout></androidx.core.widget.NestedScrollView>