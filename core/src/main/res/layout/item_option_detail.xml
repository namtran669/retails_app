<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_catskillwhite30_10_radius"
    android:foreground="?selectableItemBackground"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/optionSelectImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_checkbox_available"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/optionContentTextView"
        style="@style/P2.Trout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/optionSelectImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Medium" />

    <TextView
        android:id="@+id/optionPriceTextView"
        style="@style/P2.Trout60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="+40" />

</androidx.constraintlayout.widget.ConstraintLayout>