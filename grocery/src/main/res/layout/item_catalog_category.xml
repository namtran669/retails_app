<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackgroundBorderless"
    android:layout_marginBottom="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/catalogCategoryImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/bg_circle_onahau"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/catalogCategoryNameTextView"
        style="@style/P2.Trout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:maxLines="2"
        tools:text="Fresh Produce" />

    <TextView
        android:id="@+id/catalogCategoryCountTextView"
        style="@style/P2.Trout50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        tools:text="(1000)" />

</LinearLayout>